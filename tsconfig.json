{
  "compilerOptions": {
    "baseUrl": "./",
    "target": "es5",
    "module": "esnext",
    "sourceMap": true,
    "jsx": "react",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "lib": ["es6", "dom", "es2018.promise"],
    "noUnusedLocals": true,
    "declaration": true,
    "experimentalDecorators": true,
    "downlevelIteration": true
  },
  "exclude": ["node_modules"]
}
