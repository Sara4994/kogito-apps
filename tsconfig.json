{
  "compilerOptions": {
    "baseUrl": "./",
    "target": "es5",
    "module": "esnext",
    "sourceMap": true,
    "outDir": "./dist",
    "allowJs": true,
    "jsx": "react",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "lib": ["es6", "dom"],
    "noUnusedLocals": true,
    "paths": {
      "@kogito-apps/*": ["packages/*/src"],
      "@kogito-apps/common": ["packages/common/src/components"] 
    }
  },
  "exclude": ["node_modules"]
}
